<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PassPhraseTextBox" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#ff0</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:includeFontPadding">true</item>

    </style>

    <style name="PassPhraseTextBox2" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#0ff</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">10dp</item>


    </style>

    <style name="HeadingTextView" parent="Theme.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#fff</item>

    </style>

    <style name="SubHeadingTextView" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#ddd</item>

    </style>

    <style name="rubric" parent="Theme.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5sp</item>

        <item name="android:background">#ddd</item>

    </style>

    <style name="flashcard" parent="Theme.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10sp</item>

        <item name="android:background">#fed</item>

    </style>
    <style name="title" parent="Theme.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#162</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">3dp</item>

        <item name="android:background">#cfc</item>

    </style>
    <style name="tweet" parent="Theme.AppCompat">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>

        <item name="android:background">#def</item>

    </style>
    <style name="owners" parent="Theme.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>

        <item name="android:padding">2sp</item>
     </style>
    <style name="author" parent="owners">
        <item name="android:background">#000</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="publisher" parent="owners">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>


    <style name="popupHeader" parent="Theme.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10sp</item>

        <item name="android:background">#dfe</item>

    </style>
    <style name="popupMessage" parent="Theme.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10sp</item>

        <item name="android:background">#dfe</item>

    </style>
    <style name="tapp_buttons" parent="Theme.AppCompat">
        <item name="android:layout_margin">-5dp</item>

    </style>
    <style name = "button_addressees" parent="tapp_buttons">
        <item name="android:background">#cb0</item>
    </style>
    <style name = "button_tags" parent="tapp_buttons">
        <item name="android:background">#0cb</item>

    </style>
    <style name = "button_reactions" parent="tapp_buttons">
        <item name="android:background">#c00</item>
    </style>
    <style name = "button_links" parent="tapp_buttons">
        <item name="android:background">#b0c</item>
    </style>
</resources>
